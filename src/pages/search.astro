---
import SearchComponent from "astro-pagefind/components/Search";
import RootLayout from "../layouts/RootLayout.astro";
---
<RootLayout>
    <h2 style="text-align: center; margin-bottom: 2rem">Suche 🔍</h2>
    <SearchComponent id="search" className="pagefind-ui" uiOptions={{ showImages: false}} />

    <div class="tagmap__container">
        <h4>Themen 🏷️</h4>
        <div class="tagmap__item">
            <a href="/tags/reportagen" class="tagmap__link">Reportagen</a>
        </div>
        <div class="tagmap__item">
            <a href="/tags/Lifestyle" class="tagmap__link">Lifestyle</a>
        </div>
        <div class="tagmap__item">
            <a href="/tags/öpnv" class="tagmap__link">ÖPNV</a>
        </div>
        <div class="tagmap__item">
            <a href="/tags/stadtpolitik" class="tagmap__link">Stadtpolitik</a>
        </div>
        <div class="tagmap__item">
            <a href="/tags/interviews" class="tagmap__link">Interviews</a>
        </div>
    </div>
</RootLayout>


<style>
    .tagmap__container {
        margin-top: 2rem;
    }
    a {
        text-decoration: none;
        cursor: pointer;    
    }
    a:hover {
        text-decoration: underline;
    }
</style>